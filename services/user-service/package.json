{
  "name": "user-service",
  "version": "1.0.0",
  "description": "A Node.js microservice for user management with JWT authentication.",
  "main": "index.js",
  "scripts": {
    "start": "tsc && node dist/index.js",
    "prestart": "npm run prisma:generate",
    "dev": "nodemon --exec ts-node-dev src/index.ts",
    "predev": "npm run prisma:generate",
    "build": "tsc",
    "prebuild": "npm run prisma:generate",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --name init",
    "postinstall": "npm run prisma:generate",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "@types/cors": "^2.8.19",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.14.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
